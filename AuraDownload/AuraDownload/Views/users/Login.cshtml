@model AuraDownload.Models.user

@{
    ViewBag.Title = "Giriş Yap | Aura Download";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<title> @ViewBag.Title</title>
<div class="row">
    <div class="col-6 col-md-4"></div>
    <div class="col-6 col-md-4">

        <h2> Giriş Yap</h2>
        @Html.Raw(TempData["alert"])
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <label class="control-label col-md-10" for="username">Kullanıcı Adı</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.username, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-md-10" for="password">Şifre</label>
                <div class="col-md-10">
                    <input class="form-control text-box single-line" id="password" name="password" type="password" value="">
                    @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Giriş Yap" class="btn btn-success" /> <span style="font-size:small;float:right;"> Henüz bir hesabınız yok mu ? <a href="/users/Register">Kayıt Ol</a> </span>
                </div>
            </div>


        }
    </div>
    <div class="col-6 col-md-4"></div>
</div>

