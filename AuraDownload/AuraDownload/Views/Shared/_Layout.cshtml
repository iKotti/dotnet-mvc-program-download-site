<!doctype html>
<html class="no-js" lang="tr">

<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- <link rel="manifest" href="site.webmanifest"> -->
    <link rel="shortcut icon" type="image/x-icon" href="~/AdminTemplate/images/favicon.png">
    <!-- Place favicon.ico in the root directory -->
    <!-- CSS here -->
    <link rel="stylesheet" href="~/Template/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Template/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Template/css/magnific-popup.css">
    <link rel="stylesheet" href="~/Template/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Template/css/themify-icons.css">
    <link rel="stylesheet" href="~/Template/css/nice-select.css">
    <link rel="stylesheet" href="~/Template/css/flaticon.css">
    <link rel="stylesheet" href="~/Template/css/animate.css">
    <link rel="stylesheet" href="~/Template/css/slicknav.css">
    <link rel="stylesheet" href="~/Template/css/style.css">
    <!-- <link rel="stylesheet" css/responsive.css"> -->
</head>

<body>
    <!-- header-start -->
    <header>
        <div class="header-area ">
            <div class="header_top">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-xl-4 col-md-4 d-none d-md-block">
                            @if (Session["username"] != null && Convert.ToInt32(Session["usertype"]) == 4)
                            {
                              <a href="/admin" class="btn btn-danger"> Admin Paneli </a>
                              
                            }

                        </div>
                        <div class="col-xl-4 col-md-4">
                            <div class="logo">
                                <a href="/">
                                    <img src="~/Template/img/logo.png" alt="">
                                </a>
                            </div>
                        </div>
                        <div class="col-xl-4 col-md-4 d-none d-md-block">
                            <div class="login_resiter">
                                @if (Session["username"] == null)
                                {
                                    <p><a href="/users/Login"><i class="flaticon-user"></i>Giriş Yap</a> | <a href="/users/Register">Kayıt Ol</a> </p>
                                }
                                else
                                {
                                    <p> <a>@Session["username"].ToString()</a>  | <a href="/users/Logout"> Çıkış Yap </a></p>
                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div id="sticky-header" class="main-header-area white-bg">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-xl-7 col-lg-7">
                            <div class="main-menu  d-none d-lg-block">
                                <nav>
                                    <ul id="navigation">
                                        <li><a href="/">Anasayfa</a></li>
                                        <li><a href="/programs">Programlar</a></li>
                                        @if (Session["username"] != null)
                                        {
                                            <li><a href="/programs/favourite">Favorilerim</a></li>
                                            <li><a href="/programs/downloaded">İndirdiklerim</a></li>
                                        }
                                    </ul>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- header-end -->

    @RenderBody()

    <!-- footer_start -->
    <footer class="footer">
        <div class="footer_area">
            <div class="container">
                <div class="row">
                    <div class="col-xl-12">
                        <div class="footer_info text-center">
                            <div class="footer_logo text-center">
                                <a href="#">
                                    <img src="~/Template/img/footer-logo.png" alt="">
                                </a>
                            </div>
                            <p class="footer_text">
                                Tüm ücretsiz programlar için sitemizi takipte kalın !
                            </p>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer_bottom ">
            <div class="container">
                <div class="footer_border">
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="footer_links text-center">
                                <ul>
                                    <li><a href="/">Anasayfa</a></li>
                                    <li><a href="/programs">Programlar</a></li>
                                    @if (Session["username"] != null)
                                    {
                                        <li><a href="/programs/favourite">Favorilerim</a></li>
                                        <li><a href="/programs/downloaded">İndirdiklerim</a></li>

                                        if (Convert.ToInt32(Session["usertype"]) == 4)
                                        {
                                            <li style="float:right;"><a href="/programs/downloaded">Admin Paneli</a></li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="copyright_text text-center">
                <p>
                    Copyright &copy;
                    <script>document.write(new Date().getFullYear());</script> Aura Download | Tüm hakları saklıdır.</a>
                </p>
            </div>
        </div>
    </footer>
    <!-- footer_end -->
    <!-- JS here -->
    <script src="~/Template/js/vendor/modernizr-3.5.0.min.js"></script>
    <script src="~/Template/js/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/Template/js/popper.min.js"></script>
    <script src="~/Template/js/bootstrap.min.js"></script>
    <script src="~/Template/js/owl.carousel.min.js"></script>
    <script src="~/Template/js/isotope.pkgd.min.js"></script>
    <script src="~/Template/js/ajax-form.js"></script>
    <script src="~/Template/js/waypoints.min.js"></script>
    <script src="~/Template/js/jquery.counterup.min.js"></script>
    <script src="~/Template/js/imagesloaded.pkgd.min.js"></script>
    <script src="~/Template/js/scrollIt.js"></script>
    <script src="~/Template/js/jquery.scrollUp.min.js"></script>
    <script src="~/Template/js/wow.min.js"></script>
    <script src="~/Template/js/nice-select.min.js"></script>
    <script src="~/Template/js/jquery.slicknav.min.js"></script>
    <script src="~/Template/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Template/js/plugins.js"></script>

    <!--contact js-->
    <script src="~/Template/js/contact.js"></script>
    <script src="~/Template/js/jquery.ajaxchimp.min.js"></script>
    <script src="~/Template/js/jquery.form.js"></script>
    <script src="~/Template/js/jquery.validate.min.js"></script>
    <script src="~/Template/js/mail-script.js"></script>

    <script src="~/Template/js/main.js"></script>
</body>
</html>

