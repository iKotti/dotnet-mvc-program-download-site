@model IEnumerable<AuraDownload.Models.comment>
@{
    ViewBag.Title = "Yorumlar | Admin Paneli | Aura Download";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<title> @ViewBag.Title</title>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title"> YORUMLAR </h3>
            @Html.Raw(TempData["alert"])
            <HR>
            <p class="card-description">
            </p>
            <div class="table-responsive pt-2" style="max-width: 90%;">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                               Program
                            </th>
                            <th>
                                Yorum Yapan
                            </th>
                            <th>
                                Yorum
                            </th>
                            <th style="text-align: center;">
                                Sil
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var yorum in Model)
                        {
                            <tr>
                                <td>
                                    @yorum.comment_id
                                </td>
                                <td>
                                    <a target="_blank" href="/programs/details/@yorum.program_id">@yorum.program.program_name</a>
                                </td>
                                <td>
                                    @yorum.user.username
                                </td>
                                <td>
                                    @yorum.comment_content
                                </td>
                                <td style="text-align: center;">
                                    <a href="/admin/deleteComment/@yorum.comment_id" class="btn btn-danger" style="color: #fff"> Sil </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

