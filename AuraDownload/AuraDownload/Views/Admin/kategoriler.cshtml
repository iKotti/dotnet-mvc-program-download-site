@model IEnumerable<AuraDownload.Models.category>
@{
    ViewBag.Title = "Kategoriler | Admin Paneli | Aura Download";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<title> @ViewBag.Title</title>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title"> KATEGORİLER </h3>
            <HR>
            @Html.Raw(TempData["alert"])
            <a href="/admin/addCategory" class="btn btn-success"> Kategori Ekle</a>
            <p class="card-description">
            </p>
            <div class="table-responsive pt-2">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Kategori Adı
                            </th>
                            <th style="text-align: center;">
                                Sil
                            </th>
                            <th style="text-align: center;">
                                Düzenle
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var k in Model)
                        {
                            <tr>
                                <td>
                                    @k.category_id
                                </td>
                                <td>
                                    <a href="/categories/details/@k.category_id">@k.category_name</a>
                                </td>
                                <td style="text-align: center;">
                                    <a href="/admin/deleteCategory/@k.category_id" class="btn btn-danger" style="color: #fff"> Sil </a>
                                </td>
                                <td style="text-align: center;">
                                    <a href="/admin/editCategory/@k.category_id" class="btn btn-danger" style="color: #fff"> Düzenle </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

