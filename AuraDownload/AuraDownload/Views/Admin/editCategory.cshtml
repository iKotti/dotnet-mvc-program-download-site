@model AuraDownload.Models.category
@{
    ViewBag.Title = "Kategori Düzenle | Admin Paneli | Aura Download";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<title> @ViewBag.Title</title>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            @Html.Raw(TempData["alert"])
            <h3 class="card-title"> KATEGORİLER / KATEGORİ DÜZENLE</h3>
            <HR>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()


                <div class="row">
                    <div class="col-6 col-md-6">

                        <div class="form-horizontal">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.category_id)

                            <div class="form-group">
                                <label class="control-label col-md-5" for="category_name">Kategori Adı</label>
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.category_name, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.category_name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input href="/kategoriler/editCategory/@Model.category_id" type="submit" value="Kaydet" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


            }
        </div>
    </div>
</div>




