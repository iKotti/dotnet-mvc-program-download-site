@model IEnumerable<AuraDownload.Models.user>
@{
    ViewBag.Title = "Kullanıcılar | Admin Paneli | Aura Download";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<title> @ViewBag.Title</title>
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title"> KULLANICILAR</h3>
            @Html.Raw(TempData["alert"])
            <HR>
            <p class="card-description">
            </p>
            <div class="table-responsive pt-2" style="max-width:94%">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Ad Soyad
                            </th>
                            <th>
                                Kullanıcı Adı
                            </th>
                            <th>
                                E-Mail
                            </th>
                            <th style="text-align: center;">
                                Sil
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.OrderByDescending(u => u.user_type))
                        {
                            <tr>
                                <td>
                                    @user.user_id
                                </td>
                                <td>
                                    @if (user.user_type == 4)
                                    {
                                        <i class="ti-user" style="margin-right:7px;"></i> @user.name_surname
                                    }
                                    else
                                    {
                                        @user.name_surname
                                    }

                                </td>
                                <td>
                                    @user.username
                                </td>
                                <td>
                                    @user.mail
                                </td>
                                <td style="text-align: center;">
                                    <a href="/admin/deleteUser/@user.user_id" class="btn btn-danger" style="color: #fff"> Sil </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

